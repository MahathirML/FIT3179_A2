{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "description": "A grid plot with faceted bar charts by category.",
    "data": {
      "values": [
        {"category": "A", "subcategory": "X", "value": 10},
        {"category": "A", "subcategory": "Y", "value": 15},
        {"category": "B", "subcategory": "X", "value": 20},
        {"category": "B", "subcategory": "Y", "value": 25},
        {"category": "C", "subcategory": "X", "value": 30},
        {"category": "C", "subcategory": "Y", "value": 35},
        {"category": "D", "subcategory": "X", "value": 40},
        {"category": "D", "subcategory": "Y", "value": 45}
      ]
    },
    "mark": "bar",
    "encoding": {
      "x": {"field": "subcategory", "type": "nominal", "axis": {"title": "Subcategory"}},
      "y": {"field": "value", "type": "quantitative", "axis": {"title": "Value"}},
      "color": {"field": "subcategory", "type": "nominal"}
    },
    "facet": {
      "field": "category",
      "type": "nominal",
      "columns": 2
    },
    "config": {
      "axis": {"grid": true},
      "facet": {"spacing": 10}
    }
  }
  