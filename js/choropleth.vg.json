{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "width": 700,
    "height": 450,
    "title": "Number of Train Stations by Region (Fiscal Year 2023-2024)",
    "projection": {
      "type": "mercator",
      "scale": 50000,
      "center": [144.9671, -37.8183]
    },
    "config": {
      "background": null
    },
    "layer": [
      {
        "data": {
          "url": "https://raw.githubusercontent.com/MahathirML/FIT3179_A2/refs/heads/main/js/victoria_map.json",
          "format": {"type": "topojson", "feature": "SA4_2021_AUST_GDA2020"}
        },
        "mark": {"type": "geoshape", "stroke": "gray", "strokeWidth": 0.5},
        "transform": [
          {
            "lookup": "properties.SA4_CODE21",
            "from": {
              "data": {
                "url": "https://raw.githubusercontent.com/MahathirML/FIT3179_HW9/refs/heads/main/data/regional_stations.csv"
              },
              "key": "SA4_CODE21",
              "fields": ["Stop_lat", "Stop_long"],
              "as": ["Stop_lat", "Stop_long"]
            }
          },
          {
            "aggregate": [
              {"op": "count", "field": "Stop_ID", "as": "station_count"}
            ],
            "groupby": ["SA4_CODE21"]
          }
        ],
        "encoding": {
          "color": {
            "field": "station_count",
            "type": "quantitative",
            "title": "Number of Stations",
            "scale": {"scheme": "greens"}
          },
          "tooltip": [
            {"field": "properties.SA4_NAME21", "type": "nominal", "title": "Region Name"},
            {"field": "station_count", "type": "quantitative", "title": "Number of Stations"}
          ]
        }
      }
    ]
  }
  