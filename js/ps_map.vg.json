{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 700,
  "height": 450,
  "autosize": {
    "type": "fit",
    "contains": "content"
  },
  "projection": {
    "type": "mercator",
    "scale": 10000,
    "center": {"expr": "center"}
  },
  "config": {
    "background": null
  },
  "params": [
    {
      "name": "selectedRegion",
      "value": "All",
      "bind": {
        "input": "select",
        "options": [ "All",
          "Ballarat", "Bendigo", "Geelong", "Hume", "Latrobe - Gippsland", 
          "Melbourne - Inner", "Melbourne - Inner East", "Melbourne - Inner South", 
          "Melbourne - North East", "Melbourne - North West", "Melbourne - Outer East", 
          "Melbourne - South East", "Melbourne - West", "Mornington Peninsula", 
          "North West", "Shepparton", "Warrnambool and South West"
        ],
        "name": "Select Region: "
      }
    },
    {
      "name": "center",
      "expr": "selectedRegion === 'Melbourne - Inner' ? [144.9671, -37.8183] : selectedRegion === 'Geelong' ? [144.3543, -38.1499] : selectedRegion === 'Ballarat' ? [143.8499, -37.5622] : selectedRegion === 'Bendigo' ? [144.2802, -36.757] : [144.9671, -37.8183]"
    }
  ],
  "layer": [
    {
      "mark": {"type": "rect", "fill": "lightblue", "stroke": null},
      "data": {"values": [{}]},
      "encoding": {
        "x": {"value": 0},
        "y": {"value": 0},
        "x2": {"value": 700},
        "y2": {"value": 450}
      }
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/MahathirML/FIT3179_A2/refs/heads/main/js/victoria_map.json",
        "format": {"type": "topojson", "feature": "SA4_2021_AUST_GDA2020"}
      },
      "transform": [
        {
          "filter": "selectedRegion === 'All' ? true : datum.properties.SA4_NAME21 === selectedRegion"
        }
      ],
      "mark": {"type": "geoshape", "fill": "#d6ead6", "stroke": "gray"},
      "encoding": {
        "tooltip": [
          {"field": "properties.SA4_NAME21", "type": "nominal", "title": "Region"}
        ]
      }
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/MahathirML/FIT3179_A2/refs/heads/main/data/regional_stations.csv"
      },
      "transform": [
        {
          "calculate": "datum.Regional == 1 ? 'Regional' : 'Metropolitan'",
          "as": "Station_Type"
          
        },
        {
          "filter": "selectedRegion === 'All' ? true : datum.SA4_NAME21 === selectedRegion"
          }],

      "mark": {
        "type": "circle",
        "tooltip": {"content": "data"}
      },
      "encoding": {
        "longitude": {"field": "Stop_long", "type": "quantitative"},
        "latitude": {"field": "Stop_lat", "type": "quantitative"},
        "color": {
          "condition": {
            "test": "datum.Regional == 0",
            "value": "#99000f"
          },
          "value": "#0099ff"
        },
        "size": {
          "field": "Pax_annual",
          "type": "quantitative",
          "title": "Annual Passengers",
          "scale": {"range": [25, 25]}
        },
        "tooltip": [
          {"field": "Stop_name", "type": "nominal", "title": "Station Name"},
          {"field": "Pax_annual", "type": "quantitative", "title": "Annual Passengers", "format": ","},
          {"field": "Stop_lat", "type": "quantitative", "title": "Latitude"},
          {"field": "Stop_long", "type": "quantitative", "title": "Longitude"},
          {"field": "Station_Type", "type": "nominal", "title": "Station Type"},
          {"field": "SA4_NAME21", "type": "nominal", "title": "Region"}
        ]
      }
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/MahathirML/FIT3179_A2/refs/heads/main/js/victoria_map.json",
        "format": {"type": "topojson", "feature": "ne_110m_graticules_1"}
      },
      "mark": {"type": "geoshape", "stroke": "gray", "strokeWidth": 0.5}
    }
  ]
}
