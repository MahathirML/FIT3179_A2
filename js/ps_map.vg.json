{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 700,
  "height": 450,
  "projection": {
    "type": "mercator",
    "scale": 12750, 
    "center": [144.9671, -37.8183] 
  },
  "config": {
    "background": null
  },
  "layer": [
    {
      "mark": {"type": "rect", "fill": "lightblue", "stroke": null},
      "data": {"values": [{}]},
      "encoding": {
        "x": {"value": 0},
        "y": {"value": 0},
        "x2": {"value": 700},
        "y2": {"value": 450}
      }
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/MahathirML/FIT3179_A2/refs/heads/main/js/victoria_map.json",
        "format": {"type": "topojson", "feature": "SA4_2021_AUST_GDA2020"}
      },
      "mark": {"type": "geoshape", "fill": "#d6ead6", "stroke": "gray"}
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/MahathirML/FIT3179_HW9/refs/heads/main/data/regional_stations.csv"
      },
      "transform": [
        {
          "lookup": "Stop_lat",
          "from": {
            "data": {
              "url": "https://raw.githubusercontent.com/MahathirML/FIT3179_A2/refs/heads/main/js/victoria_map.json",
              "format": {"type": "topojson", "feature": "SA4_2021_AUST_GDA2020"}
            },
            "key": "geometry.coordinates[1]",
            "fields": ["properties.SA4_NAME21"]
          }
        },
        {
          "calculate": "datum.Regional == 1 ? 'Regional' : 'Metropolitan'",
          "as": "Station_Type"
        }
      ],
      "mark": {
        "type": "circle",
        "tooltip": {"content": "data"}
      },
      "encoding": {
        "longitude": {"field": "Stop_long", "type": "quantitative"},
        "latitude": {"field": "Stop_lat", "type": "quantitative"},
        "color": {
          "condition": {
            "test": "datum.Regional == 0",
            "value": "blue"
          },
          "value": "red"
        },
        "size": {
          "field": "Pax_annual",
          "type": "quantitative",
          "title": "Annual Passengers",
          "scale": {"range": [25, 100]}
        },
        "tooltip": [
          {"field": "Stop_name", "type": "nominal", "title": "Station Name"},
          {"field": "Pax_annual", "type": "quantitative", "title": "Annual Passengers", "format": ","},
          {"field": "Stop_lat", "type": "quantitative", "title": "Latitude"},
          {"field": "Stop_long", "type": "quantitative", "title": "Longitude"},
          {"field": "Station_Type", "type": "nominal", "title": "Station Type"},
          {"field": "properties.SA4_NAME21", "type": "nominal", "title": "Region"}
        ]
      }
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/MahathirML/FIT3179_A2/refs/heads/main/js/victoria_map.json",
        "format": {"type": "topojson", "feature": "ne_110m_graticules_1"}
      },
      "mark": {"type": "geoshape", "stroke": "gray", "strokeWidth": 0.25}
    }
  ]
}
