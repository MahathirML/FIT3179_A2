{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 300,
  "height": 300,
  "params": [
    {
      "name": "selectedRegion",
      "value": "All"
    }
  ],
  "data": {
    "url": "https://raw.githubusercontent.com/MahathirML/FIT3179_A2/refs/heads/main/data/regional_stations.csv"
  },
  "transform": [
    {
      "calculate": "isNaN(datum.Pax_annual) || datum.Pax_annual === null ? 0 : datum.Pax_annual",
      "as": "Pax_annual"
    },
    {
      "filter": "selectedRegion === 'All' ? true : datum.SA4_NAME21 === selectedRegion" 
    },
    {"aggregate": [{"op": "count", "as": "StationCount"}], "groupby": ["Regional"]},
    {
      "calculate": "datum.Regional == 1 ? 'Regional' : 'Metropolitan'",
      "as": "StationLabel"
    }
  ],
  
  "mark": {"type": "arc", "innerRadius": 50},
  "encoding": {
    "theta": {"field": "StationCount", "type": "quantitative"},
    "color": {
      "field": "StationLabel",
      "type": "nominal",
      "scale": {"range": ["#4caf50", "#ff7043"]},
      "title": "Station Type"
    },
    "tooltip": [
      {"field": "StationLabel", "type": "nominal", "title": "Type"},
      {"field": "StationCount", "type": "quantitative", "title": "No. of Stations"}
    ]
  }
}
